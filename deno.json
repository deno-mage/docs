{
  "tasks": {
    "dev": "deno run --allow-all --watch main.tsx",
    "css": "deno run --allow-all npm:tailwindcss -i main.css -o public/main.css --minify",
    "lint": "deno lint",
    "format": "deno fmt",
    "check": "deno check ."
  },
  "imports": {
    "@mage/server": "jsr:@mage/server@^0.8.6",
    "preact": "npm:preact@^10.25.0",
    "tailwindcss": "npm:tailwindcss@^3.4.15"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
